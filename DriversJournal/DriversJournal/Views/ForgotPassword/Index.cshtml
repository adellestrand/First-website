@model DriversJournal.ViewModel.ForgotPassword

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Forgot Password</h2>

<div class="container myWrapper">
    @{
        if (IsPost)
        {
            if (TempData["failed"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    <p>The E-mail you submitted doesn´t exist. Please check if it is correct.</p>
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <p>An email has been sent to the given adress</p>
                    <a href="@Url.Action("Index", "Home")">Back To Startpage</a>
                </div>
            }

        }
    }
    
    
    
    
    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Submit your email</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
               
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            
            </div>

            <div class="form-group">
                
                    <input type="submit" value="Send" class="btn btn-default" />
               
            </div>
        </div>
    }

    <div>
        <a href="@Url.Action("Index", "Home")">Back To Startpage</a>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
